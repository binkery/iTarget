<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vActionBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/base_tool_bar_background">

        <ImageView
            android:id="@+id/vAppbarLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:id="@+id/vAppbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_title_bar"
            android:textStyle="bold"
            tools:text="Title" />


        <TextView
            android:visibility="gone"
            android:id="@+id/vAppbarRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:textSize="14dp"
            android:text="设置"
            android:textColor="@color/color_white" />


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/vContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vActionBar" />


</RelativeLayout>