<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vActionBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_46A0F0">

        <ImageView
            android:id="@+id/vActionBarBack"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:id="@+id/vActionBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/vActionBarBack"
            android:textColor="@color/color_white"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:text="Title" />


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/vContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vActionBar" />


</RelativeLayout>