<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorPrimaryDark">@color/color_46A0F0</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="date_picker_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/date_picker_bg</item>
    </style>

    <style name="TipsTextView">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#1f1f1f</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">#efefef</item>
    </style>

    <style name="DateTimeTextView">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#A06935</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="SaveItemTextView">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">#FBEBCD</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">#A06935</item>

    </style>

    <style name="HomeCardTitleTextView">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="SettingColumns">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@color/color_white</item>
    </style>

    <declare-styleable name="SettingColumn">
        <attr name="key" format="string"/>
        <attr name="value" format="string"/>
    </declare-styleable>

</resources>
