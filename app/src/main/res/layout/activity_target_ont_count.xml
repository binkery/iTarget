<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.binkery.itarget.widgets.TargetLayout
        android:id="@+id/vTargetLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_46A0F0" />

    <com.binkery.itarget.widgets.WeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp" />

    <com.binkery.itarget.widgets.DateGridView
        android:id="@+id/vDateGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/vCardStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="status" />

        <TextView
            android:id="@+id/vCardTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vCardStatus"
            android:layout_below="@+id/vCardStatus"
            android:layout_marginBottom="16dp"
            android:text="2019.08.09 12:00:00" />


        <TextView
            android:id="@+id/vAddItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@color/color_46A0F0"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="Target"
            android:textColor="@color/color_white" />
    </RelativeLayout>

</LinearLayout>