<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ipw_dark_primary_color</item>
        <item name="colorPrimaryDark">@color/ipw_primary_color</item>
        <item name="colorAccent">@color/ipw_accent_color</item>
    </style>


    <style name="Theme.SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/color_46A0F0</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @android:color/transparent
        </item>
    </style>

    <style name="ItemViewTip">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/color_3c3c3c</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="ItemViewItem">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Button">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:background">@color/color_46A0F0</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DeleteButton" parent="Button">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/color_3c3c3c</item>
        <item name="android:background">@color/color_e0e0e0</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="KeyBoardItem">
        <item name="android:layout_columnSpan">1</item>
        <item name="android:layout_columnWeight" tools:targetApi="lollipop">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_rowSpan">1</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_rowWeight" tools:targetApi="lollipop">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="SettingItem">
        <item name="android:background">@color/color_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
    </style>

</resources>
