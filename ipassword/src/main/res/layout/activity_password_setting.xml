<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/vTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:text="please input password"
        android:textColor="@color/ipw_accent_color"
        android:textSize="16dp" />

    <com.binkery.ipassword.widgets.PasswordInput
        android:id="@+id/vPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp" />


    <com.binkery.ipassword.widgets.KeyBoardView
        android:id="@+id/vKeyBoardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="36dp" />

</LinearLayout>